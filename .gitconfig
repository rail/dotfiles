    email = rail@mozilla.com
    signingKey = F011018E


[alias]
    ci = commit -v
    br = branch
    st = status
    co = checkout
    di = diff -U8 --patch-with-stat --binary
    ap = format-patch --suffix=.diff -U8
    hgp = show --format=\"From: %an <%ae>%n%s%n%b\" -U8
    out = outgoing
    #du = diff -U8 --patch-with-stat --binary --no-renames @{u}...
    du = diff -U8 --patch-with-stat --binary @{u}...
    in = log ..@{u}
    nb = !sh -c 'git checkout -b $1 origin/master' -
    glog = log --graph --abbrev-commit --decorate --date=relative --format=tformat:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    wip = branch --no-merged master
    lg1 = "log --graph --abbrev-commit --decorate --date=relative --format=tformat:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
    lg2 = "log --graph --abbrev-commit --decorate --date=relative --format=tformat:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all"
    lg = !"git lg1"

[color]
    ui = auto

[github]
    user = rail

[diff]
  renames = copy

[core]
    excludesfile = ~/.gitglobalignore
    autocrlf = input
    safecrlf = true
[commit]
    gpgsign = true
