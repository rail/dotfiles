[alias]
    ci = commit -v
    br = branch
    st = status
    co = checkout
    di = diff -U8 --patch-with-stat --binary
    du = diff -U8 --patch-with-stat --binary @{u}...
    in = log ..@{u}
    nb = !sh -c 'git checkout -b $1 origin/master' -
    ki = difftool --no-symlinks --dir-diff
    ku = difftool --no-symlinks --dir-diff --binary @{u}...

[color]
    ui = auto

[github]
    user = rail

; [diff]
;   renames = copy

[core]
    excludesfile = ~/.config/git/globalignore
    autocrlf = input
    safecrlf = true
    pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
    gpgsign = true

[diff]
    renames = copy
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
