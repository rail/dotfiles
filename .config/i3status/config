general {
        colors = true
        interval = 5
}

order += "weather_yahoo toronto"
order += "volume_status master"
order += "wireless wlp4s0"
order += "battery_level 0"
order += "tztime NZ"
order += "tztime local"

wireless wlp4s0 {
        format_up = "  %quality "
        format_down = " down "
}

