    charging_character = ""
    cache_timeout = 5
    format = " {icon} {percent}% "
    #blocks = " "
    # setting "blocks" here doesn't work for unicode characters
    # patch py3status/modules/battery_level.py and set
    # BLOCKS = ["", "", "", "", " "]
}
tztime local {
        format = " %a %d, %H:%M "
}
tztime NZ {
        format = " NZ: %H:%M "
        timezone = "Pacific/Auckland"
}

volume_status master {
    format = "  {percentage}% "
}

