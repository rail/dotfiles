general {
        colors = true
        interval = 5
}

order += "external_script weather"
order += "volume master"
order += "wireless wlp4s0"
order += "battery 0"
order += "tztime NZ"
order += "tztime local"

wireless wlp4s0 {
        format_up = " WiFi: %quality "
        format_down = " W: down "
}

battery 0 {
        format = " %status %percentage %remaining "
        last_full_capacity = true
}

tztime local {
        format = " %a %d, %H:%M "
}
tztime NZ {
        format = " NZ: %H:%M "
        timezone = "Pacific/Auckland"
}

