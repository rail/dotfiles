#   #variable=foo  -- By commenting out the line, or deleting it, this uses the default

# Use the command 'task show' to see all defaults and overrides

# Files
data.location=~/.task

# Color theme (uncomment one to use)
#include /usr/share/task/light-16.theme
#include /usr/share/task/light-256.theme
#include /usr/share/task/dark-16.theme
#include /usr/share/task/dark-256.theme
include /usr/share/task/dark-red-256.theme
# include /usr/share/task/dark-green-256.theme
#include /usr/share/task/dark-blue-256.theme
#include /usr/share/task/dark-violets-256.theme
#include /usr/share/task/dark-yellow-green.theme
#include /usr/share/task/dark-gray-256.theme

color=on
taskd.certificate=~/.task/homerail.cert.pem
taskd.key=~/.task/homerail.key.pem
taskd.ca=~/.task/server.cert.pem
taskd.server=tw.iqchoice.com:53589
taskd.credentials=home/rail/863c7f4c-12a7-4bb2-8d16-a1ba88bd951f

# don't show "someday" task in default view
report.next.filter=status:pending limit:page -someday

# custom reports
report.lw.columns=description,project,priority,due,end,start.active,entry.age
report.lw.description=Lists all completed tasks for last week
report.lw.filter=status.not:deleted and modified.after:-1w and status:completed
report.lw.labels=Desc,Project,Pri,Due,Completed,Active,Age
report.lw.sort=entry+

report.someday.columns=description,project,priority,due,end,start.active,entry.age
report.someday.description=Someday tasks
report.someday.filter=+someday
report.someday.labels=Desc,Project,Pri,Due,Completed,Active,Age
report.someday.sort=entry+
